<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="admin/css/product.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>

            <main>
                <% if (books.length > 0) { %>
                    <div class="grid">
                        <% for (let book of books) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= book.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img class="product__image" src="<%= book.imageUrl %>" alt="<%= book.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= book.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= book.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-book/<%= book._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-book" method="POST">
                                        <input type="hidden" value="<%= book._id %>" name="bookId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Books Found!</h1>
                        <% } %>
            </main>
            <%- include('./includes/end.ejs') %>